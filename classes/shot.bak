(define shot%
  (class object%
    (super-new)
    
    (init-field _shot-radius)
    (init-field _x-speed)
    (init-field _y-speed)
    (init-field _x-coord)
    (init-field _y-coord)
    
    (define/public (update)
      (set! _x-coord (+ _x-coord _x-speed))
      (set! _y-coord (+ _y-coord _y-speed)))
    